.form-inner {
  width: 100%;
  height: auto;
  margin: 20px auto;
  background-color: white;
  padding: 0 15px;
}

.index-container {
  background-color: whitesmoke;
}

.form-item text,
.form-item input {
  display: inline-block;
  vertical-align: middle;
}

.form-item input {
  width: 58%;
}

.form-item text {
  width: 23%;
}

.form-item {
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid lightgray;
  margin-bottom: 10px;
}

.form-item.detailed {
  height: 80px;
  line-height: 80px;
  border-bottom: none;
}

.submit button{
  width: 80%;
  height: 40px;
  line-height: 40px;
  margin: 20px auto;
  background-color: orange;
  color: white;
  text-align: center;
  border: 1px yellow solid;
  border-radius: 20px;
}

.default text,
.default .default-switch {
  display: inline-block;
  vertical-align: top;
}

.default-switch {
  padding-top: 8px;
}

.default,
.tags {
  padding-left: 15px;
  height: 50px;
  line-height: 50px;
  background-color: white;
  margin-bottom: 15px;
}

.default .default-switch {
  margin-left: 15px;
  margin-top: -10px;
}

.detailed-textarea {
  display: inline-block;
  width: 68%;
  height: 100%;
  vertical-align: middle;
}

.form-item .area{
  display: inline-block;
  width: 60%;
}

.area-phone .label-radio,.area-phone .label-left{
  display: inline-block;
  vertical-align: top;
}

.area-phone .label-left{
  width: 85%;
}

.area-phone .choose label{
  display: block;
  height: 35px;
  line-height: 35px;
}

.area-phone .bottom{
  width: 100%;
  height: 35px;
  line-height: 35px;
  /* border-top: 1px solid gray; */
  box-shadow: 0px -5px 10px 0px rgba(0,0,0,0.5);
  text-align: center;
  color: blue;
}

