.address {
  width: 98%;
  margin: 10px auto;
}

.address-icon,
.address-title {
  display: inline-block;
  vertical-align: middle;
}

.address-title {
  margin-left: 10px;
}

.address-title-inner {
  width: 90%;
  display: inline-block;
}

.order-info {
  width: 95%;
  margin: 0 auto;
}

.store-info {
  margin-top: 20px;
}

.store-info .store-head,
.store-info .store-text {
  display: inline-block;
  vertical-align: top;
}

.store-info .store-text {
  margin-left: 10px;
  font-size: 15px;
  line-height: 30px;
}

.bottom .count {
  font-size: 15px;
  margin-left: 10px;
  text-align: right;
}

.bottom .count .piece {
  font-size: 12px;
  color: gray;
  margin-right: 10px;
}

.bottom .count .price {
  color: red;
  font-size: 17px;
  font-weight: bolder;
}

.product-card .caozuo {
  width: 67px;
  height: 20px;
  border: 1px solid lightgray;
  float: right;
  margin-top: -25px;
  border-radius: 8px;
}

.product-card .caozuo .subtract,
.product-card .caozuo .add {
  font-weight: bolder;
  font-size: 16px;
  display: inline-block;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  /* border: 1px solid lightgray; */
}

.product-card .caozuo .singleCount {
  display: inline-block;
  width: 25px;
  height: 20px;
  line-height: 20px;
  /* border: 1px solid lightgray; */
  text-align: center;
}

.product-card .singleCount {
  width: 30px;
  line-height: 20px;
  text-align: center;
  border: 1px solid gray;
  float: right;
  margin-top: -20px;
  border-radius: 5px;
  font-size: 15px;
  font-weight: 500;
}

.remarks-edit .content textarea{
  width: 90%;
  height: 200px;
  padding: 10px;
  margin: 20px auto;
  background-color: whitesmoke;
  border-radius: 15px;
}

.remarks-edit .content button{
  width: 90%;
  height: 35px;
  margin: 20px auto;
  line-height: 35px;
  text-align: center;
  color: white;
  border-radius: 20px;
  background-color: orange;
}

.other .remarks{
  height: 35px;
  line-height: 35px;
  font-size: 14px;
  padding: 5px 5%;
}
