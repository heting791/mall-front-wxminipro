.cart-edit{
  width: 95%;
  height: 20px;
  margin: 10px auto;
  position: relative;
  font-size: 13px;
}

.cart-edit view{
  position: absolute;
  right: 10px;
}

.cart-item{
  margin-bottom: 10px;
  border-radius: 10px;
}

.check{
  display: inline-block;
  width: 30px;
  height: 30px;
  position: relative;
}

.check image{
  width: 23px;
  height: 23px;
  position: absolute;
}

.product-card{
  display: inline-block;
  width: 83%;
  vertical-align: middle;
}

.settlement .all image{
  width: 23px;
  height: 23px;
}
.settlement{
  width: 100%;
  height: 40px;
  position: fixed;
  bottom: 0;
  font-size: 14px;
  background-color: white;
}

.settlement .all{
  position: relative;
  width: 23%;
  height: 100%;
}

.settlement .all image{
  position: absolute;
  top: 8px;
}

.settlement .all text{
  position: absolute;
  left: 28px;
  top: 10px;
}

.occupied{
  height: 35px;
}

.settlement view{
  height: 70%;
  display: inline-block;
  vertical-align: middle;
}
.settlement .total{
  width: 45%;
  height: 60%;
}

.settlement .total view text{
  color: red;
  font-size: 15px;
  font-weight: bolder;
}

.go-settlement{
  width: 30%;
  background-color: red;
  color: white;
  line-height: 30px;
  text-align: center;
  border-radius: 20px;
  border: 1px solid yellow;
}

.bottom .count {
  font-size: 15px;
  text-align: right;
}

.bottom .count .piece {
  font-size: 12px;
  color: gray;
  margin-right: 10px;
}

.bottom .count .price {
  color: red;
  font-size: 17px;
  font-weight: bolder;
}

.options-select .content{
  width: 90%;
  margin: 10px auto;
}

.options-select .top-img,.options-select .top-title{
  display: inline-block;
  vertical-align: middle;
}
.options-select .top-title{
  width: 70%;
  font-size: 14px;
  font-weight: bolder;
  margin-left: 6px;
}

.options-select .top-title view{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.options-select .top-title text{
  display: inline-block;
  font-size: 17px;
  color: red;
  margin-top: 10px;
}

.options-select .action-options-list{
  margin-top: 10px;
}

.action-options-list-item{
  margin-bottom: 10px;
}

.action-options-list-item .option-name-title{
  display: inline-block;
  margin-bottom: 5px;
  font-size: 14px;
  font-weight: bolder;
}

.action-options-list .option-name-list text{
  display: inline-block;
  width: auto;
  height: 20px;
  border: 1px solid lightgray;
  padding: 0 3px;
  font-size: 12px;
  margin-right: 15px;
}

.action-to-action{
  width: 100%;
  height: 35px;
  color: white;
  text-align: center;
  line-height: 35px;
  background-color: red;
  margin-top: 20px;
  border-radius: 20px;
  font-size: 14px;
}