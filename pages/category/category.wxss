.search{
  width: 95%;
  margin: 0 auto;
}
scroll-view{
  display: inline-block;
  vertical-align: top;
}

van-sidebar {
  height: 100%;
}

.category-container{
  width: 23%;
  /* height: 1000rpx; */
}

.products-container{
  width: 76.5%;
  height: 1000rpx;
}
.van-card__title{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  margin-bottom: 3px;
}

.sub-cate-box{
  display: inline-block;
  width: 75%;
  vertical-align: top;
}

.sub-cate-container{
  
}

.sub-cate-box .current-cate,.sub-cate-list .category-name .category-name-title{
  margin-left: 10px;
  font-size: 14px;
}

.sub-cate-box .current-cate,.sub-cate-list .category-name .category-name-title {
  display: none;
}

.sub-cate-list .category-name{
  margin-bottom: 10px;
}

.sub-cate-container .current-cate{
  height: 25px;
}

.sub-cate-list-item{
  font-size: 13px;
  margin: 10px 3px;
  text-align: center;
}

.van-card__title,.van-card__bottom,.van-card__desc {
  text-align: left;
}

/* 遮罩 */
.shadow{
  width: 100%;
  height: 100%;
  z-index: 80;
  position: absolute;
  top: 0;
  background-color: #000;
  opacity: 0.5;
}
/* 上滑高度 */
.choosen{
  width: 100%;
  height: 80%; 
  position: fixed;
  bottom: 0;
  background-color: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  z-index: 98;
}
/* 内容 */
.container-box {
  display: flex;
  height: 100%;
  flex-direction: column;
  width: 100%;
  border-radius: 15rpx;
  margin: 0 auto;
  z-index: 98;
}
 
/* 遮罩结束 */